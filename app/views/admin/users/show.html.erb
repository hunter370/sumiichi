<main>
  <div class="container">
    <h1 class="mb-5 mt-5">ユーザー詳細画面</h1>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @user.get_icon(200,200), class: "rounded-circle" %>
      </div>
      <div class="col-md-2">
        <p>会員ID</p>
        <p>ユーザー名</p>
        <p>メールアドレス</p>
        <p>会員ステータス</p>
      </div>
      <div class="col-md-6">
        <p><%= @user.id %></p>
        <p><%= @user.name %></p>
        <p><%= @user.email %></p>
        <div>
          <% if @user.is_deleted == false %>
            <p class="text-success"><%= "有効" %></p>
          <% else %>
            <p class="text-danger"><%= "退会" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>

