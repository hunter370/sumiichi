<main>
  <div class="container">
    <h2 class="col-md-3">新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="field mb-3">
    <%= f.label :name, "ユーザー名" %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", class:"col-md-4" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mb-5">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "登録する", class: "btn btn-success" %>
  </div>
<% end %>

<p>既に登録済みの方はこちらから<%= render "users/shared/links" %></p>

  </div>
</main>
