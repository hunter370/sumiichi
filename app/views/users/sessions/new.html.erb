<main>
  <div class="container">
    <h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field mb-3">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-4" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "ログイン", class: "btn btn-success" %>
  </div>
<% end %>

<p>会員登録がお済みでない方はこちらから<%= render "users/shared/links" %></p>

  </div>
  
</main>

