<main>
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 mt-5">
             <h1><%= @game.game_teams[1].first_base ? @game.teams[0].team_name : @game.teams[1].team_name %>のアルプス</h1>
            </div>
            <div class="col-md-2">
                <%= link_to "スタンドへ", stand_support_path %>
            </div>
            <div class="col-md-2">
                <%= link_to "対戦相手のアルプスへ", alps_first_support_path %>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-12">
                <%= form_with model: @support do |f| %>
                <%= f.hidden_field :game_id, value: @game.id %>
                <h4>コメント</h4>
                <%= f.text_field :alps_third, class: "col-md-6" %>
                <%= f.hidden_field :alps_first, value: "" %>
                <%= f.hidden_field :stand, value: "" %>
                <%= f.submit '投稿' %>
                <% end %>
            </div>
        </div>
        <% @supports.each do |support| %>
        <div class="row mb-3">
            <div class="col-md-2, float-right">
                <%= image_tag support.user.get_icon(30,30) %>
            </div>
            <div class="col-md-8">
                <%= link_to user_path(support.user.id) do %>
                    <%= support.user.name %>
                <% end %></br>
                <%= support.alps_third %>
            </div>
            <div class="col-md-2">
                 <% if support.favorited_by?(current_user) %>
                    <p>
                      <%= link_to support_favorites_path(support), method: :delete do %>
                        ♥<%= support.favorites.count %> いいね
                      <% end %>
                    </p>
                      <% else %>
                    <p>
                      <%= link_to support_favorites_path(support), method: :post do %>
                        ♡<%= support.favorites.count %> いいね
                      <% end %>
                    </p>
                 <% end %>
            </div>
        </div>
        <% end %>
    </div>
</main>
