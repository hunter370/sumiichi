<main>
    <div class="container">
        <div class="row mb-5">
            <h1><%= @game.game_teams[1].first_base ? @game.teams[0].team_name : @game.teams[1].team_name %>のアルプス</h1>
        </div>
        <div class="row mb-5">
            <div class="col-md-12">
                <%= form_with model: @support do |f| %>
                <%= f.hidden_field :game_id, value: @game.id %>
                <h4>コメント</h4>
                <%= f.text_field :alps_third, class: "col-md-6" %>
                <%= f.submit '投稿' %>
                <% end %>
            </div>
        </div>
        <div class="row mb-5">
            <table>
                <% @supports.each do |support| %>
                <tr>
                    <th><%= image_tag support.user.get_icon(30,30) %></th>
                    <th><%= support.user.name %></th>
                </tr>
                <tr>
                    <td></td>
                    <td><%= support.alps_third %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</main>
