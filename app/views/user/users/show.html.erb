<main>
  <div class="container">
    <h1 class="mb-5">マイページ</h1>
    <div class="row">
      <div class="col-md-5">
        <%= image_tag @user.get_icon(200,200), class: "rounded-circle mb-3" %></br>
        <h6 class="offset-md-2"><%= @user.name %><h6>
      </div>
      <div class="col-md-7">
        <p class="mb-5">メールアドレス : <%= @user.email %></p>
         
        <p>自己紹介</p>
         <%=safe_join(@user.introduction.split("\n"),tag(:br))%>
        <div class="mt-5">
         <%= link_to "編集する", users_edit_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</main>
