<main>
  <div class="container">
    <h1 class="mb-5">マイページ編集画面</h1>

<%= form_with model: @user, url: users_update_path, method: :patch do |f| %>

<div class="field mb-3">
  <%= f.label :icon, "アイコン" %>
  <%= f.file_field :icon, accept: "image/*" %>
</div>

<div class="field mb-3">
  <%= f.label :name, "ユーザー名" %>
  <%= f.text_field :name %>
</div>

<div class="field mb-3">
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, autocomplete: "email" %>
</div>

<div class="field mb-3">
  <%= f.label :introduction, "自己紹介" %>
  <%= f.text_area :introduction %>
</div>

<div class="actions mb-3">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
</div>

<div class="actions">
  <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
</div>
<% end %>
  </div>
  
</main>

