<main>
  <div class="container">
    <h1 class="mb-5">マイページ編集画面</h1>

<%= form_with model: @user, url: user_path, method: :patch do |f| %>

<div class="row mb-3">
    <div class="col-md-2">
     <%= f.label :icon, "アイコン" %>
    </div>
    <div class="col-md-10">
      <%= f.file_field :icon, accept: "image/*" %>
    </div>
</div>

<div class="row mb-3">
  <div class="col-md-2">
    <%= f.label :name, "ユーザー名" %>
  </div>
  <div class="col-md-10">
    <%= f.text_field :name %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-2">
    <%= f.label :email, "メールアドレス" %>
  </div>
  <div class="col-md-10">
    <%= f.email_field :email, autocomplete: "email", class:"col-md-4" %>
  </div>
</div>

<div class="row mb-5">
  <div class="col-md-2">
    <%= f.label :introduction, "自己紹介" %>
  </div>
  <div class="col-md-10">
    <%= f.text_area :introduction, class:"col-md-8" %>
  </div>
</div>

<div class="row">
  <div class="actions col-md-2">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </div>
  <div class="actions col-md-10">
    <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger" %>
  </div>
</div>

<% end %>
  </div>
  
</main>

