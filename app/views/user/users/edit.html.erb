<h1>マイページ編集画面</h1>

<%= form_with model: @user, url: users_update_path, method: :patch do |f| %>

<div class="field">
  <%= f.label :icon, "アイコン" %>
  <%= f.file_field :icon, accept: "image/*" %>
</div>

<div class="field">
  <%= f.label :name, "ユーザー名" %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :introduction, "自己紹介" %>
  <%= f.text_area :introduction %>
</div>

<div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </div>
<% end %>
